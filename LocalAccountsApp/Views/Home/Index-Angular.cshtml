
<div ng-app="ApiApp" ng-cloak="false">

    <div ng-controller="MyController">
        <br/>
        <div class="alert alert-danger" ng-show="errorMessage.message != null">
            {{errorMessage | json}}
        </div>
        

        <div class="row">
                <div class="col-sm-4">
                    <form ng-submit="callApi()">
                        <h3>Invoke API</h3>
                        <div class="form-group">
                            <label>User</label>
                            <input class="form-control" type="text" readonly ng-model="user" />
                        </div>
                        <div class="form-group">
                            <label>Result</label>
                            <input class="form-control" type="text" readonly ng-model="result" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-default">Call API</button>
                        </div>
                    </form>
                </div>

                <div class="col-sm-4">
                    <form ng-submit="register()">
                        <h3>Register</h3>
                        <div class="form-group">
                            <label>Email</label>
                            <input class="form-control" type="text" ng-model="registerEmail" />
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input class="form-control" type="password" ng-model="registerPassword" />
                        </div>
                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input class="form-control" type="password" ng-model="registerPassword2" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-default">Register</button>
                        </div>
                    </form>
                </div>

                <div class="col-sm-4">
                    <h3>Log In</h3>
                    <form ng-submit="login()">
                        <div class="form-group">
                            <label>Email</label>
                            <input class="form-control" type="text" ng-model="loginEmail" />
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input class="form-control" type="password" ng-model="loginPassword" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-default">Log In</button>
                            <button ng-click="logout()" type="button" class="btn btn-default">Log Out</button>
                        </div>
                    </form>
                </div>
            </div>


    </div>


</div>

<script>

</script>


@section Scripts {
  <script src=@Scripts.Url("~/Scripts/app-angular.js")></script>
}
